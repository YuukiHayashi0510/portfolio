{
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit"
  },
  "cSpell.words": [
    "autodocs",
    "Hayashi",
    "Hayashi's",
    "nextjs",
    "tailwindcss",
    "Yuuki"
  ],
  // tvのクラス名ソート対応
  // 参考：https://zenn.dev/apple_yagi/articles/fde1bdfafee65f
  "tailwindCSS.experimental.classRegex": [
    ["tv\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ]
}
